<div class="container">
  <div class="row">
    <div class="col-sm-12">
<p id="notice"><%= notice %></p>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h1>Organizations</h1>
        </div>
      </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Organization name</th>

      <th>Address</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.organization_name %></td>

        <td><%= organization.address %></td>
        <td><%= link_to  organization, class: "btn btn-default" do %>  <i class="glyphicon glyphicon-eye-open"></i>
          <% end %></td>
        <td><%= link_to edit_organization_path(organization),  class: "btn btn-default" do%><i class="glyphicon glyphicon-pencil"></i>
  <% end %></td>
        <td><%= link_to  organization, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" do %><i class="glyphicon glyphicon-trash"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  root_path, class: "btn btn-default" do%><i class="glyphicon glyphicon-step-backward"></i>
<% end %>
</div>
      </div>
    </div>