<div class="container">
  <div class="row">
    <div class="col-sm-12">
<p id="notice"><%= notice %></p>

<div class="content">
  <div class="panel panel-default">
    <div class="panel-heading">
<h1>
  <strong>Organization name:</strong>
  <%= @organization.organization_name %>
</h1>
</div>
    </div>
  <div class="panel-body">
  <strong>Address:</strong>
  <%= @organization.address %>
</div>

<%= link_to  edit_organization_path(@organization) ,class: "btn btn-default" do%><i class="glyphicon glyphicon-pencil"></i>
  <% end %> |
<%= link_to  organizations_path, class: "btn btn-default" do%><i class="glyphicon glyphicon-step-backward"></i>
  <% end %>
  <br>
<br>

</div>



<div class="col-md-8">




      <div class="row">
        <aside class="col-md-4">
          <div class="list-group"><%= link_to "Add client", new_organization_client_path(@organization.id), class: "list-group-item active" %>
          </div>
          <div class="list-group">
            <%= link_to "View Clients",  organization_clients_path(@organization),  class: "list-group-item active"%>
          </div>
          <% if @organization.comments.any? %>
          <div class="list-group">
          <h3>Comments (<%= @organization.comments.count %>)</h3>
            </div>
          <section class="user_info">
            <%= render 'shared/organization_info' %>
          </section>

          <% end %>
        </aside>
        <% if @organization.comments.any? %>
        <div class="col-md-8">
          <h3>Comment Feed</h3>
          <%= render 'shared/feed1' %>
        </div>

      </div>

        <% end %>

</div>

</div>
      </div>
    </div>