<div class="container">
  <div class="row">
    <div class="col-sm-12">
<p id="notice"><%= notice %></p>

<h1>Contacts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Phone number</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><%= link_to  organization_client_contact_path(@organization,@client,contact) ,class: "btn btn-default" do %>  <i class="glyphicon glyphicon-eye-open"></i>
          <% end %></td>
        <td><%= link_to  edit_organization_client_contact_path(@organization,@client,contact) , class: "btn btn-default" do%><i class="glyphicon glyphicon-pencil"></i>
  <% end %></td>
        <td><%= link_to  contact, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" do %><i class="glyphicon glyphicon-trash"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  organization_client_path(@organization,@client), class: "btn btn-default" do%><i class="glyphicon glyphicon-step-backward"></i>
<% end %>
</div>
